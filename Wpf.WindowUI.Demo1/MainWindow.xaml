<Window x:Class="Wpf.WindowUI.Demo1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf.WindowUI.Demo1"
        xmlns:guiControl="clr-namespace:GuiResources.CustomControls;assembly=GuiResources"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="980"
        StateChanged="Window_StateChanged"
        WindowStartupLocation="CenterScreen">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      GlassFrameThickness="-1"
                      ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>

    <Grid x:Name="parentGrid">
        <Border x:Name="contentBorder"
                Background="{DynamicResource BackgroundBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="78.5" />
                    <RowDefinition />
                    <RowDefinition Height="183" />
                </Grid.RowDefinitions>
                
                <!--#Title Bar-->
                <Grid Grid.Row="0">
                    <Border Background="Transparent"
                            x:Name="dragMoveBorder"
                            MouseLeftButtonDown="Window_MouseLeftButtonDown" />
                </Grid>

                <Grid Margin="0,20.15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="263" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="263" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                Margin="26,0,0,0">
                        <Image x:Name="LOGO"
                               Width="24">
                            <Image.Source>
                                <DrawingImage Drawing="{StaticResource LogoSvg}" />
                            </Image.Source>
                        </Image>
                        <TextBlock Text="Power Lite"
                                   Foreground="{DynamicResource MainTextBrush}"
                                   Width="112"
                                   FontSize="20"
                                   FontFamily="{StaticResource HOS_Bold}"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0" />
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <RadioButton Style="{StaticResource TextRadioButton}"
                                     IsChecked="True"
                                     Width="67"
                                     FontSize="14"
                                     Content="EX30"/>
                        <RadioButton Style="{StaticResource TextRadioButton}"
                                     Width="67"
                                     FontSize="14"
                                     Content="EX90"
                                     Margin="10,0" />
                        <RadioButton Style="{StaticResource TextRadioButton}"
                                     Width="67"
                                     FontSize="14"
                                     Content="XC40" />
                    </StackPanel>

                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                Margin="0,0,26,0"
                                HorizontalAlignment="Right">
                        <guiControl:IconButton Style="{StaticResource iconButtonStyle}"
                                               Background="{DynamicResource NormalBrush}"
                                               Width="38"
                                               Click="MinimizeButton_Click"
                                               x:Name="minimizeButton"
                                               Icon="{StaticResource MinimizeSvg}" />
                        <Grid Width="38"
                              Margin="10,0">
                            <guiControl:IconButton Style="{StaticResource iconButtonStyle}"
                                                          Background="{DynamicResource NormalBrush}"
                                                          Width="38"
                                                          Visibility="Visible"
                                                          Click="MaximizeButton_Click"
                                                          x:Name="MaximizeButton"
                                                          Icon="{StaticResource MaximizeSvg}" />
                            <guiControl:IconButton Style="{StaticResource iconButtonStyle}"
                                                          Background="{DynamicResource NormalBrush}"
                                                          Width="38"
                                                          Click="RestoreButton_Click"
                                                          Visibility="Collapsed"
                                                          x:Name="RestoreButton"
                                                          Icon="{StaticResource RestoreSvg}" />
                        </Grid>
                        <guiControl:IconButton Style="{StaticResource iconButtonStyle}"
                                               Background="{DynamicResource NormalBrush}"
                                               Width="38"
                                               x:Name="closeButton"
                                               Click="closeButton_Click"
                                               Icon="{StaticResource CloseSvg}" />
                    </StackPanel>
                    
                </Grid>
                
                <!--#Center Content -->
                <Grid Grid.Row="1">
                    <Image Source="Assets/Images/CarEX30.png"
                           Margin="154,37"/>

                    <Grid Margin="60,40,26,40">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="38" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Style="{StaticResource MainTextBlockStyle}"
                                       Text="Volvo EX30"
                                       FontSize="47" />
                            <TextBlock Style="{StaticResource TextBlockStyle}"
                                       Text="Fully electric crossover"
                                       FontSize="18" />
                            <Border Width="100"
                                    Height="25"
                                    Style="{StaticResource BorderStyle}"
                                    Margin="0,21,0,0"
                                    HorizontalAlignment="Left"
                                    CornerRadius="20">
                                <StackPanel HorizontalAlignment="Left"
                                            Orientation="Horizontal">
                                    <RadioButton Style="{StaticResource EllipseTextRadioButton}"
                                                 Content="L"
                                                 FontSize="18"
                                                 IsChecked="True"
                                                 Width="25" />
                                    <RadioButton Style="{StaticResource EllipseTextRadioButton}"
                                                 Content="R"
                                                 FontSize="18"
                                                 Width="25" />
                                    <RadioButton Style="{StaticResource EllipseTextRadioButton}"
                                                 Content="F"
                                                 FontSize="18"
                                                 Width="25" />
                                    <RadioButton Style="{StaticResource EllipseTextRadioButton}"
                                                 Content="B"
                                                 FontSize="18"
                                                 Width="25" />
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1"
                                    VerticalAlignment="Center">
                            <guiControl:IconButton Style="{StaticResource iconButtonStyle}"
                                                   Background="{DynamicResource NormalBrush}"
                                                   Width="38"
                                                   Icon="{StaticResource RestoreSvg}" />
                            <guiControl:IconButton Style="{StaticResource iconButtonStyle}"
                                                   Background="{DynamicResource NormalBrush}"
                                                   Width="38"
                                                   Margin="0,10"
                                                   Icon="{StaticResource RestoreSvg}" />
                            <guiControl:IconButton Style="{StaticResource iconButtonStyle}"
                                                   Background="{DynamicResource NormalBrush}"
                                                   Width="38"
                                                   Icon="{StaticResource RestoreSvg}" />
                        </StackPanel>

                    </Grid>
                </Grid>

                <Grid Grid.Row="2"
                      Margin="26,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Style="{StaticResource CardBorderStyle}"
                            Height="183"
                            CornerRadius="10,10,0,0">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="70" />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0"
                                  Margin="18,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="38" />
                                </Grid.ColumnDefinitions>

                                <Border Height="2"
                                        Grid.ColumnSpan="2"
                                        Margin="0,0,0,10"
                                        VerticalAlignment="Bottom"
                                        Background="{DynamicResource ChooseBrush}" />

                                <StackPanel Grid.Column="0">
                                    <TextBlock Style="{StaticResource MainTextBlockStyle}"
                                               Text="Theme"
                                               FontSize="18"
                                               Margin="0,18,0,0" />
                                    <TextBlock Style="{StaticResource TextBlockStyle}"
                                               Text="Car Simply Introduction"
                                               FontSize="8" />
                                </StackPanel>
                                
                                <!--#Button -->

                            </Grid>

                            <Grid Grid.Row="1"
                                  Margin="18,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="10" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <RadioButton Style="{StaticResource TextRadioButton}"
                                             Background="{DynamicResource BackgroundBrush}"
                                             Height="50"
                                             IsChecked="{Binding ThemeCheckedStates[LightColor]}"
                                             Command="{Binding ChangeThemeCommand}"
                                             CommandParameter="LightColor"
                                             x:Name="Light_RadioButton"
                                             Content="Light Theme"
                                             Grid.Column="0"
                                             Grid.Row="0" />
                                <RadioButton Style="{StaticResource TextRadioButton}"
                                             Background="{DynamicResource BackgroundBrush}"
                                             Height="50"
                                             IsChecked="{Binding ThemeCheckedStates[DarkColor]}"
                                             Command="{Binding ChangeThemeCommand}"
                                             CommandParameter="DarkColor"
                                             x:Name="Dark_RadioButton"
                                             Content="Dark Theem"
                                             Grid.Column="2"
                                             Grid.Row="0" />
                                <RadioButton Style="{StaticResource TextRadioButton}"
                                             Background="{DynamicResource BackgroundBrush}"
                                             Height="50"
                                             x:Name="FreshBlue_RadioButton"
                                             Content="Fresh Blue"
                                             IsChecked="{Binding ThemeCheckedStates[FreshBlue]}"
                                             Command="{Binding ChangeThemeCommand}"
                                             CommandParameter="FreshBlue"
                                             Grid.Column="0"
                                             Grid.Row="2" />
                                <RadioButton Style="{StaticResource TextRadioButton}"
                                             Background="{DynamicResource BackgroundBrush}"
                                             Height="50"
                                             IsChecked="{Binding ThemeCheckedStates[HoneyPink]}"
                                             Command="{Binding ChangeThemeCommand}"
                                             CommandParameter="HoneyPink"
                                             x:Name="HoneyPink_RadioButton"
                                             Content="Honey Pink"
                                             Grid.Column="2"
                                             Grid.Row="2" />
                            </Grid>
                            
                        </Grid>

                    </Border>

                    <Border Grid.Column="2"
                            Style="{StaticResource CardBorderStyle}"
                            Height="183"
                            CornerRadius="10,10,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="70" />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0"
                                  Margin="18,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="38" />
                                </Grid.ColumnDefinitions>

                                <Border Height="2"
                                        Grid.ColumnSpan="2"
                                        Margin="0,0,0,10"
                                        VerticalAlignment="Bottom"
                                        Background="{DynamicResource ChooseBrush}" />

                                <StackPanel Grid.Column="0">
                                    <TextBlock Style="{StaticResource MainTextBlockStyle}"
                                               Text="Close Mode"
                                               FontSize="18"
                                               Margin="0,18,0,0" />
                                    <TextBlock Style="{StaticResource TextBlockStyle}"
                                               Text="Your Car Date Time Setting"
                                               FontSize="8" />
                                </StackPanel>

                            </Grid>

                        </Grid>


                    </Border>

                    <Border Grid.Column="4"
                            Style="{StaticResource CardBorderStyle}"
                            Height="183"
                            CornerRadius="10,10,0,0">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="70" />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0"
                                  Margin="18,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="38" />
                                </Grid.ColumnDefinitions>

                                <Border Height="2"
                                        Grid.ColumnSpan="2"
                                        Margin="0,0,0,10"
                                        VerticalAlignment="Bottom"
                                        Background="{DynamicResource ChooseBrush}" />

                                <StackPanel Grid.Column="0">
                                    <TextBlock Style="{StaticResource MainTextBlockStyle}"
                                               Text="Background Type"
                                               FontSize="18"
                                               Margin="0,18,0,0" />
                                    <TextBlock Style="{StaticResource TextBlockStyle}"
                                               Text="Optional Preset Mode"
                                               FontSize="8" />
                                </StackPanel>
                            </Grid>

                        </Grid>


                    </Border>

                </Grid>

                
                
            </Grid>
        </Border>
        
    </Grid>
</Window>
